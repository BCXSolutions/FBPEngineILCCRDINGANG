// DESTACA LOS CAMPOS DEBLOQUEADOS
md-input-container.ng-valid .mat-input-placeholder {
    color: rgba(0, 0, 0, 0.54)
}
md-input-container.ng-valid.mat-focused .mat-input-placeholder{
    color: #00838f ;
}

md-input-container.ng-valid .mat-input-underline {
    border-color: rgba(0, 0, 0, 0.54)
}

md-input-container.ng-invalid .mat-input-underline {
    border-color: rgba(0, 0, 0, 0.54)
}

md-select.ng-valid .mat-select-placeholder{
    color: rgba(0, 0, 0, 0.54)
}
md-select:focus .mat-select-placeholder{
    color: #00838f ;
}

md-select.ng-valid .mat-select-underline {
    background-color: rgba(0, 0, 0, 0.54)
}

md-select.ng-valid .mat-select-arrow {
    color: rgba(0, 0, 0, 0.54)
}

md-select.mat-select-disabled .mat-select-placeholder {
    color: rgba(0, 0, 0, 0.38);
}

