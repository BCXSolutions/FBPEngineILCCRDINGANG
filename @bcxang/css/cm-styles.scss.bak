/** NGX DATATABLE **/
.cm-datatable {
    height: calc(50vh - 0px);
}
/** Para que quede centrado verticalmente los titulos de la tabla */
.ngx-datatable.material .datatable-header .datatable-header-cell
{
    //se modifico tamaño de fuente y padding manteniendo el diseño del angular anterior.
    padding: 0.3rem 1rem !important; 
    font-size: 14px;
    font-weight: 400;
}

// se agrego este estilo para el fondo de los titulos en la grilla y su altura.
.ngx-datatable .datatable-header {
    height: 30px !important;
    background-color: #00838f!important;
}

/* Para los colores del header
.datatable-header {  
    background-color: #00838f!important;  
}
.datatable-header-cell {
    color: white!important;
}
 **/
 
.gridHeader
{
    background-color: #00838f!important;   
    color: white!important;
 
}

/* Para que quede centrado el texto en la tabla. Con angular V7 
IMPORTANTISIMO: Mantener la proporcion padding-top + paddin-bottom = 1.8rem
*/
.ngx-datatable.material .datatable-body .datatable-body-row .datatable-body-cell
{
    padding-top: 0;
    padding-bottom: 1.8rem;
}
 
/** Fila seleccionada ** cyan-600  **/
.ngx-datatable.material.single-selection .datatable-body-row.active,
.ngx-datatable.material.single-selection .datatable-body-row.active .datatable-row-group, .ngx-datatable.material.multi-selection .datatable-body-row.active,
.ngx-datatable.material.multi-selection .datatable-body-row.active .datatable-row-group, .ngx-datatable.material.multi-click-selection .datatable-body-row.active,
.ngx-datatable.material.multi-click-selection .datatable-body-row.active .datatable-row-group 

.ngx-datatable.material.cell-selection .datatable-body-cell.active,
  .ngx-datatable.material.cell-selection .datatable-body-cell.active .datatable-row-group {
    background-color: #00acc1!important; 
    }

/** Para que aparezca el cursor como mano en la fila de la grilla   **/ 
.ngx-datatable.material:not(.cell-selection) .datatable-body-row:hover,
  .ngx-datatable.material:not(.cell-selection) .datatable-body-row:hover .datatable-row-group {
    cursor: pointer }
 
    /** Para esconder el paginamiento del extremo inferior derecho
.datatable-pager
{
    visibility: hidden;
}
